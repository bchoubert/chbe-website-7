    .fidget-spinner-scene
      amp-position-observer(on="scroll:spinAnimation.seekTo(percent=event.percent)", intersection-ratios="1", layout="nodisplay")
      amp-img(id="fidgetSpinnerImage", width="1024", height="1114", style="width: 50px", layout="responsive", src="https://playground.amp.dev/static/samples/img/fidget.png", alt="Picture of a fidget spinner")

    amp-animation(id="spinAnimation", layout="nodisplay")
      script(type="application/json") { "duration": "1", "fill": "both", "direction": "reverse", "animations": [{ "selector": "#fidgetSpinnerImage", "keyframes": [{ "transform": "rotate(360deg)" }] }] }

    
